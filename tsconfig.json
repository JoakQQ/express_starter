{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "ES6", "ScriptHost"],
    "jsx": "preserve",
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": ["server/**/*.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
